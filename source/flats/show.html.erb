<% flat = data.flats[owner] %>
<!-- source/flats/show.html.erb -->

<!-- Access data.flats with owner's name as key -->

<div class="banner" style="height:60vh; background-position: center; background-image: url(<%= image_path flat.picture %>);"></div>
<div class="container">
  <div class="row">
    <div class='col-xs-12 col-sm-6 col-sm-offset-1'>
      <div class='user-details'>
        <div class="user">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{owner}", class: "avatar-large" %>
          <div class="text-center" style='font-weight:bold;'><%= owner %></div>
        </div>
        <div class='basic-info'>
          <h1><%= flat.description %></h1>
          <p><%= flat.city_name %></p>
          <p>
            <% 5.times do |i|  %>
            <%= flat.rating - (i) > 0 ? '<i class="fa fa-star" aria-hidden="true"></i>' : '<i class="fa fa-star-o" aria-hidden="true"></i>' %>
            <%end %>
          </p>
        </div>
      </div>
    </div>
    <div class='col-xs-12 col-sm-4'>

      <form >
        <h2> Book this flat </h2>
        <div class='form-group'>
          <div class="row">
            <div class='col-xs-6'>
              <input type="date" class="form-control" name='checkin' placeholder="checkin">
            </div>
            <div class='col-xs-6'>
              <input type="date" class="form-control" name='checkout' placeholder="checkout">
            </div>
          </div>
        </div>
        <div class='form-group'>
          <select class="form-control" name='number_guests'>
            <option value="1" selected>1 guest</option>
            <option value="2">2 guests</option>
            <option value="3">3 guests</option>
            <option value="4">4 guests</option>
          </select>
        </div>
        <div class='form-group'>
          <button type="submit" class="btn btn-danger form-control">Book Now</button>
        </div>
      </form>
    </div>
  </div>
</div>

<div class='container'>
  <div class='row'>
    <div class='col-xs-10 col-xs-offset-1'>
      <h2> About this flat </h2>
      <p><%= flat.details %>
        <div class='row'>
          <div class='col-xs-12 col-md-2'>
            <h6> The Space </h3>
          </div>
          <div class='col-xs-12 col-md-4'>
          Accomodation
          </div>
          <div class='col-xs-12 col-md-4'>
          Food
          </div>
        </div>
      </div>
    </div>
  </div>
